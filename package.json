{
  "name": "sky-follower-bridge",
  "displayName": "Sky Follower Bridge",
  "version": "0.1.1",
  "description": "Instantly find and follow the same users from your Twitter follower on Bluesky.",
  "author": "kawamataryou",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv3"
  },
  "dependencies": {
    "@atproto/api": "^0.3.3",
    "@plasmohq/messaging": "^0.3.0",
    "@plasmohq/storage": "^1.6.0",
    "plasmo": "0.87.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.210",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.31",
    "prettier": "2.8.3",
    "tailwindcss": "^3.3.2",
    "daisyui": "^2.51.6",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "https://bsky.social/*",
      "https://twitter.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "sky-follower-bridge@ryo.kawamata"
      }
    }
  },
  "volta": {
    "node": "16.20.0"
  }
}
